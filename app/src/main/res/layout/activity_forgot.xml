<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/llForgot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ivBack"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:src="@drawable/back_top"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="@string/forgotPasswordHeading"
        android:textSize="@dimen/_40sdp"
        android:fontFamily="@font/gidole_regular"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:textColor="@color/orange" />
    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:background="@null"
            android:hint="@string/newPasswordHint"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:singleLine="true"
            android:fontFamily="@font/gidole_regular"
            android:textColorHint="@color/offBlack"
            android:textSize="@dimen/_12sdp"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="@color/offBlack"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1ssp"/>
    <LinearLayout
        android:id="@+id/ll_Confirmpassword"
        android:layout_below="@id/email_view"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:background="@null"
            android:hint="@string/newPasswordConfirmHint"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:singleLine="true"
            android:fontFamily="@font/gidole_regular"
            android:textColorHint="@color/offBlack"
            android:textSize="@dimen/_12sdp"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="@color/offBlack"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1ssp"/>
    <RelativeLayout
        android:id="@+id/rlSubmit"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:id="@+id/tvLogin"
            android:animateLayoutChanges="true"
            android:text="Submit"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            style="@style/TextAppearance.MaterialComponents.Headline2"
            android:fontFamily="@font/gidole_regular"
            android:textSize="@dimen/_22sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/ivForgot"
            android:src="@drawable/right_arrow"
            android:adjustViewBounds="true"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</LinearLayout>