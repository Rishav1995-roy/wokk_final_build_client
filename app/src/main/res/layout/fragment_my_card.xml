<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@null"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llMyCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:id="@+id/llNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.60"
                            android:background="@drawable/curve_color_bg">

                            <TextView
                                android:id="@+id/tvCountryCode"
                                style="@style/TextAppearance.MaterialComponents.Headline6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/gidole_regular"
                                android:text="India (+91)"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.05" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.50"
                            android:background="@drawable/curve_color_bg">

                            <EditText
                                android:id="@+id/etNumber"
                                style="@style/TextAppearance.MaterialComponents.Headline6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@null"
                                android:fontFamily="@font/gidole_regular"
                                android:hint="10 digit num"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="10"
                                android:textAlignment="center"
                                android:textColor="@color/orange"
                                android:textColorHint="@color/black"
                                android:textSize="@dimen/_10sdp" />

                            <ImageView
                                android:id="@+id/ivContact"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:adjustViewBounds="true"
                                android:padding="@dimen/_3sdp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/contact" />
                        </RelativeLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.05" />

                        <RelativeLayout
                            android:id="@+id/rlSms"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.40"
                            android:background="@null">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/sms" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlWhatsappShare"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.40"
                            android:background="@null">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/whatsapp_share" />
                        </RelativeLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_below="@+id/llNumber"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:id="@+id/ivCard"
                        android:adjustViewBounds="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"/>

                    <RelativeLayout
                        android:layout_below="@id/ivCard"
                        android:background="@drawable/my_card_color_bg"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:id="@+id/rlHeading"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tvCardHolderName"
                                    android:ellipsize="end"
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:textSize="@dimen/_15sdp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/gidole_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/tvUserType"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/gidole_regular"
                                    android:textSize="@dimen/_10sdp"
                                    style="@style/TextAppearance.MaterialComponents.Headline5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/tvUserDecsp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/gidole_regular"
                                    android:textSize="@dimen/_10sdp"
                                    style="@style/TextAppearance.MaterialComponents.Headline4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:layout_alignParentEnd="true"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/ivCardHolderPhone"
                                    android:src="@drawable/phone_my_card"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"/>
                                <ImageView
                                    android:id="@+id/ivCardHolderWhatsapp"
                                    android:src="@drawable/whatsapp_mycard"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_below="@id/rlHeading"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:id="@+id/llButtons"
                            android:weightSum="4.75"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/rlFollow"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:background="@drawable/follow_button_bg"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:id="@+id/tvFollow"
                                    android:text="Follow"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_8sdp"
                                    style="@style/TextAppearance.MaterialComponents.Body1"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <ImageView
                                    android:padding="@dimen/_5sdp"
                                    android:id="@+id/ivFollow"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/heart"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"/>
                            </RelativeLayout>
                            <View
                                android:layout_weight="0.25"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <RelativeLayout
                                android:id="@+id/rlWapp"
                                android:layout_weight="1"
                                android:background="@drawable/whatsaap_button_bg"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="W-app"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_8sdp"
                                    style="@style/TextAppearance.MaterialComponents.Body1"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <ImageView
                                    android:padding="@dimen/_5sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/whatsapp_white"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"/>
                            </RelativeLayout>
                            <View
                                android:layout_weight="0.25"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <RelativeLayout
                                android:id="@+id/rlCall"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:background="@drawable/call_button_bg"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="Call"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_8sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    style="@style/TextAppearance.MaterialComponents.Body1"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <ImageView
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/phone"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"/>
                            </RelativeLayout>
                            <View
                                android:layout_weight="0.25"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <RelativeLayout
                                android:id="@+id/rlshare"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:background="@drawable/share_button_bg"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="Share"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_8sdp"
                                    style="@style/TextAppearance.MaterialComponents.Body1"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <ImageView
                                    android:padding="@dimen/_5sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/share"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/rlWokkYoutubeLink"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@id/llButtons"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/black_bg">

                            <TextView
                                android:id="@+id/tvWokkYoutubeLink"
                                style="@style/TextAppearance.MaterialComponents.Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Wokk Youtube Link"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvGallery"
                            style="@style/TextAppearance.MaterialComponents.Headline6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/rlWokkYoutubeLink"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:textSize="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="Gallery"
                            android:textColor="@color/black"
                            android:fontFamily="@font/gidole_regular" />

                        <RelativeLayout
                            android:id="@+id/rlGallery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvGallery"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvGallery"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/tvEmptyText"
                                style="@style/TextAppearance.MaterialComponents.Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/gidole_regular"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_25sdp"
                                android:text="No items available."
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvYoutube"
                            style="@style/TextAppearance.MaterialComponents.Headline6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rlGallery"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/gidole_regular"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="Youtube Links"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />
                        <RelativeLayout
                            android:id="@+id/rlYoutube"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvYoutube"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvYoutube"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/tvEmptyTextYoutube"
                                style="@style/TextAppearance.MaterialComponents.Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_25sdp"
                                android:text="No items available."
                                android:fontFamily="@font/gidole_regular"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/socialConnection"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gidole_regular"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivInstagram"
                        android:src="@drawable/instagram"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>
                    <ImageView
                        android:id="@+id/ivTwitter"
                        android:src="@drawable/twitter"
                        android:adjustViewBounds="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:scaleType="fitCenter"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>
                    <ImageView
                        android:id="@+id/ivFacebook"
                        android:src="@drawable/facebook"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>
                </LinearLayout>
            </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/rlAlert"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/errorone"
                android:textColor="@color/black"
                android:fontFamily="@font/gidole_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvProfile"
                android:fontFamily="@font/gidole_regular"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/errortwo"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_10sdp"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/errorthree"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/gidole_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>