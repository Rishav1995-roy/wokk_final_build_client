<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@null"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llMyCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/white"
                    tools:ignore="UselessParent">
                    <LinearLayout
                        android:id="@+id/llNumber"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd= "20dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:baselineAligned="false">
                        <RelativeLayout
                            android:layout_weight="0.55"
                            android:layout_width="0dp"
                            android:background="@drawable/black_bg"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tvCountryCode"
                                android:text="India (+91)"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                style="@style/TextAppearance.MaterialComponents.Subtitle2"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                        <View
                            android:layout_weight="0.05"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.25"
                            android:background="@drawable/black_bg"
                            android:layout_height="match_parent">
                            <EditText
                                android:id="@+id/etNumber"
                                android:layout_width="match_parent"
                                android:maxLength="10"
                                android:hint="10 digit num"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:textColorHint="@color/orange"
                                android:textAlignment="center"
                                style="@style/TextAppearance.MaterialComponents.Body2"
                                android:inputType="number"
                                android:layout_alignParentStart="true"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:textSize="@dimen/_8sdp"
                                android:imeOptions="actionDone"
                                android:background="@null"
                                android:layout_height="match_parent"/>
                            <ImageView
                                android:id="@+id/ivContact"
                                android:scaleType="fitCenter"
                                android:padding="@dimen/_3sdp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:adjustViewBounds="true"
                                android:src="@drawable/contact"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"/>
                        </RelativeLayout>
                        <View
                            android:layout_weight="0.05"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <RelativeLayout
                            android:id="@+id/rlSms"
                            android:layout_weight="0.50"
                            android:layout_width="0dp"
                            android:background="@drawable/black_bg"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/sms"
                                android:adjustViewBounds="true"
                                android:layout_centerInParent="true"
                                android:scaleType="fitCenter"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                        <View
                            android:layout_weight="0.10"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <RelativeLayout
                            android:id="@+id/rlWhatsappShare"
                            android:layout_weight="0.50"
                            android:layout_width="0dp"
                            android:background="@drawable/black_bg"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/whatsapp_share"
                                android:adjustViewBounds="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_centerInParent="true"
                                android:scaleType="fitCenter"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <!--<RelativeLayout
                        android:layout_below="@id/llNumber"
                        android:id="@+id/rlCard"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_width="350dp"
                        android:layout_height="200dp"/>-->
                    <RelativeLayout
                        android:id="@+id/rlInner"
                        android:layout_below="@id/llNumber"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_width="350dp"
                        android:layout_height="200dp">
                        <ImageView
                            android:id="@+id/ivcard"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:padding="2dp"
                            android:layout_width="350dp"
                            android:layout_height="200dp"/>

                        <TextView
                            android:id="@+id/tvOrganisationName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:id="@+id/llAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivAddress"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_gravity="center_vertical"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/location" />

                            <TextView
                                android:id="@+id/tvCardAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:maxWidth="@dimen/_120sdp"
                                android:maxLines="4" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llMail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivMail"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_gravity="center_vertical"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/at" />

                            <TextView
                                android:id="@+id/tvemailAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:maxWidth="@dimen/_100sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llPhoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivPhone"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_gravity="center_vertical"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/call" />

                            <TextView
                                android:id="@+id/tvphoneNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:maxWidth="@dimen/_100sdp"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/llButtons"
                        android:layout_below="@id/rlInner"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:weightSum="4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp">
                        <RelativeLayout
                            android:id="@+id/rlFollow"
                            android:layout_weight="1"
                            android:background="@drawable/follow_button_bg"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tvFollowed"
                                android:text="Follow"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:textColor="@color/white"
                                style="@style/TextAppearance.MaterialComponents.Button"
                                android:textAllCaps="false"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/ivFollowed"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/heart"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_width="@dimen/_11sdp"
                                android:layout_height="@dimen/_11sdp"/>
                        </RelativeLayout>
                        <View
                            android:layout_weight="0.05"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <RelativeLayout
                            android:id="@+id/rlWhatsapp"
                            android:layout_weight="0.90"
                            android:background="@drawable/whatsaap_button_bg"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="W-app"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:textColor="@color/white"
                                style="@style/TextAppearance.MaterialComponents.Button"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_9sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/whatsapp"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_width="@dimen/_11sdp"
                                android:layout_height="@dimen/_11sdp"/>
                        </RelativeLayout>
                        <View
                            android:layout_weight="0.05"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <RelativeLayout
                            android:id="@+id/rlShare"
                            android:layout_weight="0.95"
                            android:background="@drawable/share_button_bg"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="Share"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:textColor="@color/white"
                                style="@style/TextAppearance.MaterialComponents.Button"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_9sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/share"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:layout_width="@dimen/_11sdp"
                                android:layout_height="@dimen/_11sdp"/>
                        </RelativeLayout>
                        <View
                            android:layout_weight="0.05"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <RelativeLayout
                            android:id="@+id/rlCall"
                            android:layout_weight="1"
                            android:background="@drawable/call_button_bg"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="Call"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.MaterialComponents.Button"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_9sdp"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/phone"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:layout_width="@dimen/_11sdp"
                                android:layout_height="@dimen/_11sdp"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rlWokkYoutubeLink"
                        android:layout_below="@id/llButtons"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:background="@drawable/black_bg"
                        android:layout_height="@dimen/_30sdp">
                        <TextView
                            android:id="@+id/tvWokkYoutubeLink"
                            android:text="Wokk Youtube Link"
                            android:textColor="@color/black"
                            android:layout_centerInParent="true"
                            android:textSize="@dimen/_12sdp"
                            style="@style/TextAppearance.MaterialComponents.Body2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tvGallery"
                        android:text="Gallery"
                        android:textColor="@color/orange"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textStyle="bold"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:layout_below="@id/rlWokkYoutubeLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/rlGallery"
                        android:layout_below="@id/tvGallery"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvGallery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvEmptyText"
                            android:text="No items available."
                            android:textColor="@color/offBlack"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            style="@style/TextAppearance.MaterialComponents.Body2"
                            android:textSize="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tvYoutube"
                        android:text="Youtube Links"
                        android:textColor="@color/orange"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textStyle="bold"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:layout_below="@id/rlGallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/rlYoutube"
                        android:layout_below="@id/tvYoutube"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvYoutube"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvEmptyTextYoutube"
                            android:text="No items available."
                            android:textColor="@color/offBlack"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            style="@style/TextAppearance.MaterialComponents.Body2"
                            android:textSize="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/socialConnection"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivInstagram"
                        android:src="@drawable/instagram"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>
                    <ImageView
                        android:id="@+id/ivTwitter"
                        android:src="@drawable/twitter"
                        android:adjustViewBounds="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:scaleType="fitCenter"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>
                    <ImageView
                        android:id="@+id/ivFacebook"
                        android:src="@drawable/facebook"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>
                </LinearLayout>
            </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/rlAlert"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/errorone"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvProfile"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/errortwo"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_10sdp"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/errorthree"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>