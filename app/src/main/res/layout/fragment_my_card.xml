<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@null"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llMyCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:id="@+id/llNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.60"
                            android:background="@drawable/curve_color_bg">

                            <TextView
                                android:id="@+id/tvCountryCode"
                                style="@style/TextAppearance.MaterialComponents.Headline6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/gidole_regular"
                                android:text="India (+91)"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.05" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.50"
                            android:background="@drawable/curve_color_bg">

                            <EditText
                                android:id="@+id/etNumber"
                                style="@style/TextAppearance.MaterialComponents.Headline6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@null"
                                android:fontFamily="@font/gidole_regular"
                                android:hint="10 digit num"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="10"
                                android:textAlignment="center"
                                android:textColor="@color/orange"
                                android:textColorHint="@color/black"
                                android:textSize="@dimen/_10sdp" />

                            <ImageView
                                android:id="@+id/ivContact"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:adjustViewBounds="true"
                                android:padding="@dimen/_3sdp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/contact" />
                        </RelativeLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.05" />

                        <RelativeLayout
                            android:id="@+id/rlSms"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.40"
                            android:background="@null">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/sms" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlWhatsappShare"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.40"
                            android:background="@null">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/whatsapp_share" />
                        </RelativeLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_below="@+id/llNumber"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:id="@+id/ivCard"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_170sdp"/>

                    <RelativeLayout
                        android:layout_below="@id/ivCard"
                        android:background="@drawable/my_card_color_bg"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/rlHeading"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tvCardHolderName"
                                    android:ellipsize="end"
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:textSize="@dimen/_15sdp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/gidole_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/tvUserType"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/gidole_regular"
                                    android:textSize="@dimen/_10sdp"
                                    style="@style/TextAppearance.MaterialComponents.Headline5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/tvUserDecsp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/gidole_regular"
                                    android:textSize="@dimen/_10sdp"
                                    style="@style/TextAppearance.MaterialComponents.Headline4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:layout_alignParentEnd="true"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/ivCardHolderPhone"
                                    android:src="@drawable/phone_my_card"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"/>
                                <ImageView
                                    android:id="@+id/ivCardHolderWhatsapp"
                                    android:src="@drawable/whatsapp_mycard"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_below="@id/rlHeading"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:id="@+id/llButtons"
                            android:weightSum="4.75"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/rlFollow"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:background="@drawable/follow_button_bg"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:id="@+id/tvFollow"
                                    android:text="Follow"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_8sdp"
                                    style="@style/TextAppearance.MaterialComponents.Body1"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <ImageView
                                    android:padding="@dimen/_5sdp"
                                    android:id="@+id/ivFollow"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/heart"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"/>
                            </RelativeLayout>
                            <View
                                android:layout_weight="0.25"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <RelativeLayout
                                android:id="@+id/rlWapp"
                                android:layout_weight="1"
                                android:background="@drawable/whatsaap_button_bg"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="W-app"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_8sdp"
                                    style="@style/TextAppearance.MaterialComponents.Body1"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <ImageView
                                    android:padding="@dimen/_5sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/whatsapp_white"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"/>
                            </RelativeLayout>
                            <View
                                android:layout_weight="0.25"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <RelativeLayout
                                android:id="@+id/rlCall"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:background="@drawable/call_button_bg"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="Call"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_8sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    style="@style/TextAppearance.MaterialComponents.Body1"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <ImageView
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/phone"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"/>
                            </RelativeLayout>
                            <View
                                android:layout_weight="0.25"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <RelativeLayout
                                android:id="@+id/rlshare"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:background="@drawable/share_button_bg"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="Share"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_8sdp"
                                    style="@style/TextAppearance.MaterialComponents.Body1"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <ImageView
                                    android:padding="@dimen/_5sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/share"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/rlWokkYoutubeLink"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@id/llButtons"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/black_bg">

                            <TextView
                                android:id="@+id/tvWokkYoutubeLink"
                                style="@style/TextAppearance.MaterialComponents.Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Wokk Youtube Link"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/llAboutGallery"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_below="@+id/rlWokkYoutubeLink"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/llgallery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/ivGallery"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/mycard_gallery_active"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"/>
                                <TextView
                                    android:id="@+id/tvGallery"
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_15sdp"
                                    android:text="Gallery"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/orange"
                                    android:fontFamily="@font/gidole_regular" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/llabout"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/ivAbout"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/mycard_about"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"/>
                                <TextView
                                    android:id="@+id/tvAbout"
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_15sdp"
                                    android:text="About"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/gidole_regular" />
                            </LinearLayout>

                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/rlGalleryAbout"
                            android:layout_below="@id/llAboutGallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp">
                            <RelativeLayout
                                android:id="@+id/rlGallery"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvGallery"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/tvEmptyText"
                                    style="@style/TextAppearance.MaterialComponents.Body2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/gidole_regular"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:layout_marginBottom="@dimen/_25sdp"
                                    android:text="No items available."
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_8sdp"
                                    android:visibility="gone" />
                            </RelativeLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:orientation="vertical"
                                android:id="@+id/llAbout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="Service: "
                                        style="@style/TextAppearance.MaterialComponents.Headline6"
                                        android:textSize="@dimen/_15sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        
                                        android:id="@+id/tvService"
                                        style="@style/TextAppearance.MaterialComponents.Body1"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/llname"
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="Name: "
                                        style="@style/TextAppearance.MaterialComponents.Headline6"
                                        android:textSize="@dimen/_15sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        
                                        android:id="@+id/tvName"
                                        style="@style/TextAppearance.MaterialComponents.Body1"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/llOrg"
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="Organisation name: "
                                        style="@style/TextAppearance.MaterialComponents.Headline6"
                                        android:textSize="@dimen/_15sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        
                                        android:id="@+id/tvOrg"
                                        style="@style/TextAppearance.MaterialComponents.Body1"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/llPhoneNumber"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="Phone number: "
                                        style="@style/TextAppearance.MaterialComponents.Headline6"
                                        android:textSize="@dimen/_15sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        
                                        android:id="@+id/tvPh"
                                        style="@style/TextAppearance.MaterialComponents.Body1"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/llEmail"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="Email: "
                                        style="@style/TextAppearance.MaterialComponents.Headline6"
                                        android:textSize="@dimen/_15sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        
                                        android:id="@+id/tvEmail"
                                        style="@style/TextAppearance.MaterialComponents.Body1"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/llAddress"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="Address: "
                                        style="@style/TextAppearance.MaterialComponents.Headline6"
                                        android:textSize="@dimen/_15sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        
                                        android:id="@+id/tvAddress"
                                        style="@style/TextAppearance.MaterialComponents.Body1"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/llPin"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="Pin: "
                                        style="@style/TextAppearance.MaterialComponents.Headline6"
                                        android:textSize="@dimen/_15sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        
                                        android:id="@+id/tvPin"
                                        style="@style/TextAppearance.MaterialComponents.Body1"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/gidole_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/llYoutube"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_below="@id/rlGalleryAbout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/ivYouTube"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:layout_centerVertical="true"
                                android:src="@drawable/mycard_youtube_active"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"/>
                            <TextView
                                android:id="@+id/tvYoutube"
                                android:layout_toEndOf="@id/ivYouTube"
                                style="@style/TextAppearance.MaterialComponents.Headline6"
                                android:layout_width="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gidole_regular"
                                android:text="Youtube Links"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/_15sdp" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rlYoutube"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/llYoutube"
