<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rlOtp"
        android:background="@null"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvHeading"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:text="Verify your account."
            android:textSize="@dimen/_40sdp"
            android:textColor="@color/orange"
            android:fontFamily="@font/gidole_regular"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/ivBack"
            android:layout_margin="@dimen/_20sdp"
            android:src="@drawable/back_top"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>
        <TextView
            android:id="@+id/tvSubHeading"
            android:layout_below="@id/tvHeading"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:fontFamily="@font/gidole_regular"
            android:layout_marginTop="@dimen/_40sdp"
            android:textSize="@dimen/_15sdp"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_below="@id/tvSubHeading"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:id="@+id/llText"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/_35sdp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent">
                <TextView
                    android:fontFamily="@font/gidole_regular"
                    android:id="@+id/tvFirst"
                    android:background="@null"
                    android:maxLength="1"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"/>
                <View
                    android:id="@+id/viewOne"
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="@dimen/_15sdp"
                android:orientation="vertical"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent">
                <TextView
                    android:fontFamily="@font/gidole_regular"
                    android:id="@+id/tvSecond"
                    android:background="@null"
                    android:maxLength="1"
                    android:textAlignment="center"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"/>
                <View
                    android:id="@+id/viewTwo"
                    android:background="@color/offBlack"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="@dimen/_15sdp"
                android:orientation="vertical"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvThird"
                    android:background="@null"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12sdp"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gidole_regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"/>
                <View
                    android:id="@+id/viewThree"
                    android:background="@color/offBlack"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="@dimen/_15sdp"
                android:orientation="vertical"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvFourth"
                    android:background="@null"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12sdp"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"/>
                <View
                    android:id="@+id/viewFour"
                    android:background="@color/offBlack"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>
            </LinearLayout>

        </LinearLayout>
        <EditText
            android:layout_below="@id/llText"
            android:id="@+id/etText"
            android:inputType="number"
            android:maxLength="4"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1ssp"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@id/etText"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="If you didn't receive a code! "
                android:textColor="@color/black"
                android:fontFamily="@font/gidole_regular"
                android:textSize="@dimen/_10sdp"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvResend"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/orange"
                android:textSize="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:visibility="gone"
        android:id="@+id/ivLoadder"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"/>



</RelativeLayout>