<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_15sdp"
        android:tag="back"
        android:src="@drawable/back_top"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"/>
    <RelativeLayout
        android:id="@+id/rlView"
        android:layout_width="@dimen/_450sdp"
        android:layout_height="@dimen/_220sdp">
        <RelativeLayout
            android:id="@+id/rlCard"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_352sdp"
            android:layout_height="@dimen/_202sdp">
            <RelativeLayout
                android:layout_width="@dimen/_350sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/ivCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:singleLine="true"
                    android:id="@+id/tvOrganisationName"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <TextView
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/tvName"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/llAddress"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivAddress"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/location" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:maxWidth="@dimen/_120sdp"
                        android:maxLines="4" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/cardLogo"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="@dimen/_90sdp"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>
                <LinearLayout
                    android:id="@+id/llMail"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivMail"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/at" />

                    <TextView
                        android:id="@+id/tvemailAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:maxWidth="@dimen/_100sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPhoneNumber"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivPhone"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/call" />

                    <TextView
                        android:id="@+id/tvphoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:maxWidth="@dimen/_100sdp"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llSideView"
        android:layout_toEndOf="@id/rlView"
        android:background="#FAE7DF"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="match_parent">
        <View
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
            android:background="@color/orange"/>
        <LinearLayout
            android:layout_weight="0.99"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="Text Style"
                android:fontFamily="@font/gidole_regular"
                android:textSize="@dimen/_14sdp"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:background="@color/orange"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Font Size"
                    android:fontFamily="@font/gidole_regular"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_10sdp" />
                <EditText
                    android:id="@+id/etFont"
                    android:fontFamily="@font/gidole_regular"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/red_bg"
                    android:imeOptions="actionDone"
                    android:textAlignment="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/orange"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_25sdp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:background="@color/orange"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Text Visibility"
                    android:fontFamily="@font/gidole_regular"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_10sdp" />
                <ToggleButton
                    android:id="@+id/toggleAttribute"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:textOff=""
                    android:textOn=""
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_toggle"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:background="@color/orange"/>
            <TextView
                android:text="Font"
                android:fontFamily="@font/gidole_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/orange"
                android:textSize="@dimen/_10sdp"/>
            <RelativeLayout
                android:id="@+id/rlUsertype"
                android:background="@drawable/red_bg"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvAttributeFont"
                    android:fontFamily="@font/gidole_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="Select font"
                    android:textColorHint="@color/orange"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_8sdp" />

                <ImageView
                    android:id="@+id/ivDown"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/down_red"
                    android:tag="down" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlRecyclerView"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/red_bg"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFont"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tvEmptyText"
                    android:fontFamily="@font/gidole_regular"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="No items available."
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_6sdp"
                    android:visibility="gone" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:background="@color/orange"/>
            <TextView
                android:text="Color"
                android:fontFamily="@font/gidole_regular"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/orange"
                android:textSize="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Body2"/>
            <RelativeLayout
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/red_bg">

                <RelativeLayout
                    android:id="@+id/rlColorHolder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llLowerView"
        android:layout_below="@id/rlView"
        android:background="#FAE7DF"
        android:orientation="horizontal"
        android:layout_width="@dimen/_450sdp"
        android:weightSum="5"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llEdit"
            android:layout_width="0dp"
            android:layout_weight="0.995"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/edit_text"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"/>
            <TextView
                android:text="Edit Text"
                android:fontFamily="@font/gidole_regular"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/orange"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_weight="0.005"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/orange"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lllogo"
            android:layout_width="0dp"
            android:layout_weight="0.995"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_edit_card"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"/>
            <TextView
                android:text="Add logo"
                android:fontFamily="@font/gidole_regular"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/orange"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_weight="0.005"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/orange"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.995"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rlBorder"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/red_bg">

                <RelativeLayout
                    android:id="@+id/rlBorderColorHolder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp" />
            </RelativeLayout>
            <TextView
                android:text="Border Color"
                android:fontFamily="@font/gidole_regular"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/orange"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_weight="0.005"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/orange"/>
        <LinearLayout
            android:id="@+id/llChangeLayout"
            android:layout_width="0dp"
            android:layout_weight="0.995"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/layout"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"/>
            <TextView
                android:text="Change layout"
                android:fontFamily="@font/gidole_regular"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/orange"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_weight="0.005"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/orange"/>
        <LinearLayout
            android:id="@+id/llPreview"
            android:fontFamily="@font/gidole_regular"
            android:layout_width="0dp"
            android:layout_weight="0.995"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/preview"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"/>
            <TextView
                android:text="Preview"
                android:fontFamily="@font/gidole_regular"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/orange"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_weight="0.005"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/orange"/>
        <LinearLayout
            android:id="@+id/llSave"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/save"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"/>
            <TextView
                android:text="Save card"
                android:fontFamily="@font/gidole_regular"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/orange"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>