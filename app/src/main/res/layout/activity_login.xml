<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:id="@+id/rlLogin"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llHeading"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp">
        <TextView
            android:layout_width="wrap_content"
            android:text="Welcome"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_40sdp"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:fontFamily="@font/gidole_regular"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="to"
                android:textColor="@color/black"
                android:textSize="@dimen/_40sdp"
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:fontFamily="@font/gidole_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/wokk_logo"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_60sdp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llEmail"
        android:layout_below="@id/llHeading"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_90sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/editPhoneNumberHint"
            android:inputType="number"
            android:maxLength="10"
            android:fontFamily="@font/gidole_regular"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/black"
            android:textColorHint="@color/offBlack"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
    <View
        android:layout_below="@+id/llEmail"
        android:id="@+id/email_view"
        android:background="@color/offBlack"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1ssp"/>
    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_below="@id/email_view"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:background="@null"
            android:hint="@string/editPasswordHint"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:singleLine="true"
            android:fontFamily="@font/gidole_regular"
            android:textColorHint="@color/offBlack"
            android:textSize="@dimen/_12sdp"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_below="@id/ll_password"
        android:id="@+id/password_view"
        android:background="@color/offBlack"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1ssp"/>
    <RelativeLayout
        android:id="@+id/rlSignIn"
        android:layout_below="@id/password_view"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:id="@+id/tvLogin"
            android:animateLayoutChanges="true"
            android:text="Sign In"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            style="@style/TextAppearance.MaterialComponents.Headline2"
            android:fontFamily="@font/gidole_regular"
            android:textSize="@dimen/_22sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/ivLogin"
            android:src="@drawable/right_arrow"
            android:adjustViewBounds="true"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <TextView
        android:visibility="gone"
        android:layout_below="@id/rlSignIn"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/tvForgot"
        android:text="@string/forgotPassword"
        android:textColor="@color/black"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/gidole_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:id="@+id/llSignIn"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/signInText"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:fontFamily="@font/gidole_regular"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/signInClick"
             android:layout_marginStart="@dimen/_3sdp"
            android:textColor="@color/orange"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/gidole_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>